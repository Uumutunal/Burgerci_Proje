@model DrinkViewModel
@{
    ViewData["Title"] = "UpdateDrink";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container">
    <div class="page-inner">
        <div class="page-header">
            <h3 class="fw-bold mb-3">Drinks</h3>
            <ul class="breadcrumbs mb-3">
                <li class="nav-home">
                    <a href="#">
                        <i class="icon-home"></i>
                    </a>
                </li>
                <li class="separator">
                    <i class="icon-arrow-right"></i>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("DrinkList")">Drinks</a>
                </li>
                <li class="separator">
                    <i class="icon-arrow-right"></i>
                </li>
                <li class="nav-item">
                    <a href="#">Update Drink Panel</a>
                </li>
            </ul>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Update Drink Operation</div>
                    </div>
                    <div class="card-body">
                        <form class="form" asp-controller="Drink" asp-action="UpdateDrink" method="post" enctype="multipart/form-data">
                            <input type="hidden" asp-for="Id" class="form-control" />
                            <div class="form-group">
                                <label for="Name">Drink Name</label>
                                <br />
                                <input asp-for="Name" type="text" class="form-control" id="Name" placeholder="Enter new drink name" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="Price">Price</label>
                                <br />
                                <input asp-for="Price" type="number" class="form-control" id="Price" placeholder="Enter new drink price" step="0.01" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div data-mdb-input-init class="form-group form-outline mb-4">
                                <label asp-for="PhotoUrl" class="form-label">ADD PHOTO</label>
                                <input asp-for="PhotoUrl" class="form-control form-control-lg" type="file" id="PhotoUrl" />
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Update Drink" class="btn btn-success btn-block" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}