@model GarnitureViewModel
@{
    ViewData["Title"] = "UpdateGarniture";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container">
    <div class="page-inner">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Update Garniture Operation</div>
                    </div>
                    <div class="card-body">
                        <form class="form" asp-controller="Garniture" asp-action="UpdateGarniture" method="post">
                            <input type="hidden" asp-for="Id" class="form-control"/>
                            <div class="form-group">
                                <label for="Name">Garniture Name</label>
                                <br />
                                <input asp-for="Name" type="text" class="form-control" id="Name" placeholder="Enter new garniture name" required/>
                            </div>
                            <div class="form-group">
                                <label for="Price">Price</label>
                                <br />
                                <input asp-for="Price" type="number" class="form-control" id="Price" placeholder="Enter new garniture price" step="0.01" required/>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Update Garniture" class="btn btn-success btn-block" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

