@model List<OrderDetailViewModel>

@{
    ViewBag.Title = "Menu List";

    Layout = "~/Views/AdminLayout/Index.cshtml";
    double totalPrice = 0;
}


<h2>Order List</h2>


<div class="page-inner">
    <div class="page-header">
        <h3 class="fw-bold mb-3">Cart</h3>
    </div>
</div>


@if (Model == null || !Model.Any())
{
    <p>No orders found.</p>
}
else
{
    <div class="container">
        <div class="row">
            @foreach (var order in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <div class="card-body">
                            @if (order.MenuViewModel != null)
                            {
                                <h5 class="card-title">Menu Name : @order.MenuViewModel.Name</h5>
                                <img src="@order.MenuViewModel.PhotoUrl" class="card-img-top" style="height: 200px; object-fit: cover;">


                            }
                            @if (order.HamburgerViewModel != null)
                            {
                                <h5 class="card-title">Hamburger Name : @order.HamburgerViewModel.Name</h5>
                                <img src="@order.HamburgerViewModel.PhotoUrl" class="card-img-top" style="height: 200px; object-fit: cover;">


                            }
                            @if (order.DrinkViewModel != null)
                            {
                                <h5 class="card-title">Drink Name : @order.DrinkViewModel.Name</h5>
                                <img src="@order.DrinkViewModel.PhotoUrl" class="card-img-top" style="height: 200px; object-fit: cover;">


                            }
                            @if (order.ExtraViewModel != null)
                            {
                                <h5 class="card-title">Extra Name : @order.ExtraViewModel.Name</h5>
                                <img src="@order.ExtraViewModel.PhotoUrl" class="card-img-top" style="height: 200px; object-fit: cover;">


                            }
                            <h5 class="card-title">Size : @order.Size</h5>

                            <p class="card-text">Quantity : @order.Quantity</p>

                            @{totalPrice += order.Price;}

                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">@($"{order.Price:C}")</small>
                            </div>
                            <form asp-action="DeleteOrderDetail" method="post" style="display:inline;">
                                <input type="hidden" name="orderDetailId" value="@order.Id" />
                                <input type="hidden" name="OrderId" value="@order.OrderId" />
                                <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
        <form asp-action="ConfirmOrder" method="post" style="display:inline;">
            <input type="hidden" name="id" value="@Model[0].OrderId" />
            <button type="submit" class="btn btn-primary mt-4">Confirm Order | Total Price = @($"{totalPrice:C}")</button>
        </form>


    </div>
}