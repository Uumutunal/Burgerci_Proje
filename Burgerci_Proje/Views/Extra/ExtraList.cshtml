@{
    ViewData["Title"] = "ExtraList";
    if (ViewBag.IsAdmin == "True")
    {
        Layout = "~/Views/AdminLayout/Index.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_UserLayout.cshtml";
    }
}

