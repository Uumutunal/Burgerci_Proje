﻿
@model List<MenuViewModel>

@{
    ViewBag.Title = "Menu List";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Menu List</h2>

<div class="container">
    <a href="/Menu/CreateMenu" class="btn btn-primary mt-4">Add New Menu</a>

  <br />
    <div class="row">
        @foreach (var menu in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@menu.Name</h5>
                        <p class="card-text">@menu.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <button type="button" class="btn btn-sm btn-outline-secondary btnAdd" data-id="@menu.Id">Add</button>
                            </div>
                            <small class="text-muted">@menu.Price $</small>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

